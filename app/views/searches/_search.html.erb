<div class="d-flex justify-content-center">
            <% if user_signed_in? %>
                <%=form_with url: search_path, method: :get  do |f|%>
        
                    <%= f.text_field :word%>
                    <%=f.select :model, options_for_select({"User"=>"user","Book"=>"book"})%>
                    <%=f.select :search, options_for_select({"完全一致"=>"perfect","部分一致"=>"part"})%>
                    <%=f.submit "検索"%>
                <% end %>
            <% end %>
</div>